{
  "name": "fromtheriver",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/build-villages.mjs && node scripts/generate-feeds.mjs && node scripts/generate-archive-pages.mjs && node scripts/generate-sitemap.mjs && node scripts/generate-robots.mjs && node scripts/generate-og-svg.mjs || true",
    "build": "npm run build:app && npm run build:modal && npm run postbuild:copy-modal",
    "postbuild:copy-modal": "node scripts/copy-modal-to-dist.mjs",
    "build:app": "node scripts/build-target.mjs app",
    "build:modal": "node scripts/build-target.mjs modal",
    "dev": "vite",
    "preview": "vite preview",
    "preview:ci": "vite preview --host 0.0.0.0 --port 4173 --strictPort",
    "generate:feeds": "node scripts/generate-feeds.mjs",
    "generate:og-svg": "node scripts/generate-og-svg.mjs",
    "lint": "eslint .",
    "format": "prettier -w .",
    "smoke": "node scripts/smoke.mjs",
    "test:unit": "jest --passWithNoTests=false",
    "test:visual": "playwright test",
    "test:e2e": "playwright test",
    "test:a11y": "cypress run",
    "test": "npm run test:visual && npm run test:a11y",
    "ci:test": "start-server-and-test preview:ci http://127.0.0.1:4173 \"npm run test:visual && npm run test:a11y\"",
    "test:lighthouse": "npx @lhci/cli@0.13.0 autorun",
    "postinstall": "playwright install --with-deps chromium || true"
  },
  "dependencies": {
    "i18next": "^23.11.5",
    "i18next-browser-languagedetector": "^7.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^13.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@playwright/test": "^1.47.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.7.0",
    "cypress": "^13.8.0",
    "cypress-axe": "^1.5.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "start-server-and-test": "^2.0.4",
    "tailwindcss": "^3.4.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.12.1",
    "vite": "^5.2.0",
    "yaml": "^2.5.0"
  }
}
