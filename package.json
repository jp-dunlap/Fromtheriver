    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.10.1",
    "cypress": "^13.14.0",
    "cypress-axe": "^1.5.0",
    "postcss": "^8.4.38",
    "start-server-and-test": "^2.0.8",
