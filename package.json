  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/generate-feeds.mjs && vite build",
    "preview": "vite preview --port 4173",
    "generate:feeds": "node scripts/generate-feeds.mjs",
